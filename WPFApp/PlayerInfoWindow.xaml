<Window x:Class="WPFApp.PlayerInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp"
        mc:Ignorable="d"
        Title="{Binding Source={x:Static local:LocalizationHelper.Instance}, Path=PlayerInfoWindowTitle}" Height="450" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E1E1E">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#FFB0B0B0"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Player Image -->
        <Image x:Name="imgPlayer" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
               Width="150" Height="150" Margin="0,0,0,10" HorizontalAlignment="Center"/>
        <Button x:Name="btnChangeImage" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Content="{Binding Source={x:Static local:LocalizationHelper.Instance}, Path=AddChangeImageButton}" Width="150" Margin="0,0,0,20" HorizontalAlignment="Center" Click="btnChangeImage_Click"/>

        <!-- Player Name -->
        <Label Grid.Row="2" Grid.Column="0" Content="{Binding Source={x:Static local:LocalizationHelper.Instance}, Path=NameLabel}"/>
        <TextBlock x:Name="txtName" Grid.Row="2" Grid.Column="1"/>

        <!-- Shirt Number -->
        <Label Grid.Row="3" Grid.Column="0" Content="{Binding Source={x:Static local:LocalizationHelper.Instance}, Path=NumberLabel}"/>
        <TextBlock x:Name="txtNumber" Grid.Row="3" Grid.Column="1"/>

        <!-- Position -->
        <Label Grid.Row="4" Grid.Column="0" Content="{Binding Source={x:Static local:LocalizationHelper.Instance}, Path=PositionLabel}"/>
        <TextBlock x:Name="txtPosition" Grid.Row="4" Grid.Column="1"/>

        <!-- Captain Status -->
        <Label Grid.Row="5" Grid.Column="0" Content="{Binding Source={x:Static local:LocalizationHelper.Instance}, Path=CaptainLabel}"/>
        <TextBlock x:Name="txtCaptain" Grid.Row="5" Grid.Column="1"/>

        <!-- Goals -->
        <Label Grid.Row="6" Grid.Column="0" Content="{Binding Source={x:Static local:LocalizationHelper.Instance}, Path=GoalsLabel}"/>
        <TextBlock x:Name="txtGoals" Grid.Row="6" Grid.Column="1"/>

        <!-- Yellow Cards -->
        <Label Grid.Row="7" Grid.Column="0" Content="{Binding Source={x:Static local:LocalizationHelper.Instance}, Path=YellowCardsLabel}"/>
        <TextBlock x:Name="txtYellowCards" Grid.Row="7" Grid.Column="1"/>
    </Grid>
</Window> 