<Window x:Class="WPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp"
        mc:Ignorable="d"
        Title="{Binding Source={x:Static local:LocalizationHelper.Instance}, Path=MainWindowTitle}" Height="450" Width="800">
    <Window.Resources>
        <local:FormatForComboBoxConverter x:Key="FormatForComboBoxConverter"/>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Favorite Team -->
        <TextBlock Text="{Binding Source={x:Static local:LocalizationHelper.Instance}, Path=FavoriteTeamLabel}" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <ComboBox x:Name="cbFavoriteTeam" Grid.Row="0" Grid.Column="1" Width="200" SelectionChanged="cbFavoriteTeam_SelectionChanged">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Converter={StaticResource FormatForComboBoxConverter}}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <Button x:Name="btnFavoriteInfo" Grid.Row="0" Grid.Column="3" Content="{Binding Source={x:Static local:LocalizationHelper.Instance}, Path=InfoButton}" Width="60" Margin="10,0,0,0" Click="btnFavoriteInfo_Click"/>

        <!-- Opponent Team -->
        <TextBlock Text="{Binding Source={x:Static local:LocalizationHelper.Instance}, Path=OpponentTeamLabel}" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,10,10,0"/>
        <ComboBox x:Name="cbOpponentTeam" Grid.Row="1" Grid.Column="1" Width="200" Margin="0,10,0,0" SelectionChanged="cbOpponentTeam_SelectionChanged">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Converter={StaticResource FormatForComboBoxConverter}}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <Button x:Name="btnOpponentInfo" Grid.Row="1" Grid.Column="3" Content="{Binding Source={x:Static local:LocalizationHelper.Instance}, Path=InfoButton}" Width="60" Margin="10,10,0,0" Click="btnOpponentInfo_Click"/>

        <!-- Result Label -->
        <TextBlock x:Name="lblResult" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,0"/>

        <!-- Settings Button -->
        <Button x:Name="btnOpenSettings" Grid.Row="3" Grid.Column="3" Content="{Binding Source={x:Static local:LocalizationHelper.Instance}, Path=SettingsButton}" Width="100" Height="35" Margin="0,30,0,0" Click="btnOpenSettings_Click"/>

        <!-- Football field and lineup display -->
        <Border Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="4" Margin="0,30,0,0" CornerRadius="10" BorderBrush="Gray" BorderThickness="1">
            <Viewbox Stretch="Uniform">
                <Grid Width="800" Height="400">
                    <Image Source="pack://application:,,,/WPFApp;component/Resources/field.jpg" Stretch="Fill" Width="800" Height="400"/>
                    <Canvas x:Name="canvasField" Width="800" Height="400" Background="Transparent">
                        <Line X1="400" Y1="0" X2="400" Y2="400" Stroke="White" StrokeThickness="3" StrokeDashArray="5,5"/>
                    </Canvas>
                </Grid>
            </Viewbox>
        </Border>
    </Grid>
</Window>
