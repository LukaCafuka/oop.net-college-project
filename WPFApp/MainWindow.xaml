<Window x:Class="WPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <local:FormatForComboBoxConverter x:Key="FormatForComboBoxConverter"/>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Favorite Team -->
        <TextBlock Text="Favorite Team:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <ComboBox x:Name="cbFavoriteTeam" Grid.Row="0" Grid.Column="1" Width="200" SelectionChanged="cbFavoriteTeam_SelectionChanged">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Converter={StaticResource FormatForComboBoxConverter}}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <Button x:Name="btnFavoriteInfo" Grid.Row="0" Grid.Column="3" Content="Info" Width="60" Margin="10,0,0,0" Click="btnFavoriteInfo_Click"/>

        <!-- Opponent Team -->
        <TextBlock Text="Opponent Team:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,10,10,0"/>
        <ComboBox x:Name="cbOpponentTeam" Grid.Row="1" Grid.Column="1" Width="200" Margin="0,10,0,0" SelectionChanged="cbOpponentTeam_SelectionChanged">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Converter={StaticResource FormatForComboBoxConverter}}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <Button x:Name="btnOpponentInfo" Grid.Row="1" Grid.Column="3" Content="Info" Width="60" Margin="10,10,0,0" Click="btnOpponentInfo_Click"/>

        <!-- Result Label -->
        <TextBlock x:Name="lblResult" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,0"/>
    </Grid>
</Window>
